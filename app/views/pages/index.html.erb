<h1>Listing pages</h1>

<table class="table table-hover table-striped table-bordered">>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><%= page.content %></td>
    <td><%= link_to 'Show', page, :class => 'btn btn-info' %></td>
    <td><%= link_to 'Edit', edit_page_path(page), :class => 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', page, :class => 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Page', new_page_path, :class => 'btn btn-default' %>
